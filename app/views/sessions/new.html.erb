<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div>
    <%= form_tag login_path do %>

      <%= label_tag 'email' %>
      <%= email_field_tag 'email', 'Email Address', class:"form_login"%>

      <%= label_tag 'password' %>
      <%= password_field_tag 'password' %>

      <%= submit_tag 'Log In', class: "btn_login" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", users_new_path %></p>
  </div>	
</div>