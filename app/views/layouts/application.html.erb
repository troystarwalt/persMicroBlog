<!DOCTYPE html>
<html>
<head>
	<script src="https://use.typekit.net/nzz4sfp.js"></script>
	<script>try{Typekit.load({ async: true });}catch(e){}</script>
  	<title>MicroBlog</title>
  	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  	<%= csrf_meta_tags %>
</head>
<body>
	<header>
	<div id="top_bar">
		<h1 id="main_header">T<span id="hcolor">h</span>row</h1>
	</div>
	</header>
		<div id="wrapper">
			<div id="content">	
			<div id="pattern" class="pattern">		
				<nav>
					<ul class="navigation" role="navigation">					
						<li><a href="/home/index">Home</a></li>
						<li><a href="/posts/index">Throw Something</a></li>
						<li><a href="/users">See Other Users</a></li>
						<li><a href="/profile">Profile</a></li>
						<li><a href="/users/new">Sign Up</a></li>
						<li><a href="/login">Login</a></li>
						<li><a href="/logout">Logout</a></li>					
					</ul>	
				</nav>
			</div>
				<hr>
				<article id="main_content">
				<p class="flash_notice">
					<% if flash[:notice] %>
	                <%= flash[:notice] %>
	                <% end %>
				</p>
				<%= yield %>
				</article>
				<footer>
					<div id="footer_content">
						<hr>
						<div id="logo_footer">
						<img src="/bottom_logo.png">
						</div>
						<div id="copyright">
							<span>&copy; Trox</span>
							<span>All Rights Reserved</span>
						</div>
					</div>		
				</footer>
			</div>
		</div>	
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	</body>
</html>